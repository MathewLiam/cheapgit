@model cheapgit.web.Models.Pages.CategoryArchive;
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header>
    <div class="container text-center">
        <h1>@Model.Title</h1>
    </div>
</header>
<main>
    <div class="container">
        <div class="card-columns">
            @foreach(var cat in Model.Archive.Posts)
            {
            <div class="card" style="width: 18rem;">
                @if (cat.PrimaryImage.HasValue)
                {
                    <a href="@cat.Permalink">
                        <img class="rounded mb-3" src="@Url.Content(cat.PrimaryImage)" alt="@cat.PrimaryImage.Media.AltText">
                    </a>
                }
                <div class="card-body">
                    <a href="@cat.Permalink" class="card-link"><h5 class="card-title">@cat.Title</h5></a>
                    <p class="card-text">@cat.OgDescription</p>
                </div>
            </div>
            }
        </div>
        
    </div> 
</main>

