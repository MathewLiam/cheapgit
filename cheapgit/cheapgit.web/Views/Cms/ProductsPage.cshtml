@model cheapgit.web.Models.Posts.ProductPage;
@{
    ViewData["Title"] = "ProductsPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    window.initProductExplorer = {
        categoryid: "@Model.PageSettings.CategoryId.Value",
        searchterm: "@Model.PageSettings.SearchTerm.Value"
    };
</script>
<header>
    <div class="container text-center">
        <h1>@Model.Title</h1>
    </div>
</header>
<main>
    <div class="container">
        <div id="root"></div>
    </div>
</main>