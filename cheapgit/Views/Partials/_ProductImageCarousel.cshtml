@model cheapgit.ViewModels.pages.ProductDetailsViewModel

<div id="ProductImageCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @for (var i = 0; i < Model.images.Count(); i++)
        {
            if (i == 0)
            {
                <li data-target="#ProductImageCarousel" data-slide-to="@i" class="active"></li>
            }
            else
            {
                <li data-target="#ProductImageCarousel" data-slide-to="@i"></li>
            }
        }
    </ol>
    <div class="carousel-inner">
        @for (var image = 0; image < Model.images.Count(); image++)
        {
            if (image == 0)
            {
                <div class="carousel-item active">
                    <img class="d-block w-100" src="data:image/jpeg;base64, @Model.images.ElementAt(image)" width="100%" />
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="data:image/jpeg;base64, @Model.images.ElementAt(image)" width="100%" />
                </div>
            }
        }
    </div>
    <a class="carousel-control-prev" href="#ProductImageCarousel" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#ProductImageCarousel" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>