@inherits Umbraco.Web.Mvc.UmbracoViewPage<cheapgit.ViewModels.blocks.ProductCard>
@using ContentModels = Umbraco.Web.PublishedModels;
@using Umbraco.Web.Models
@{
    var descbrief = Model.product.description.Substring(0, 50);
    var productDetailsRoot = Model.Content.Value<IPublishedContent>("rootProductDetailsPage");
    var linkRouteValue = new RouteValueDictionary(new { product = Model.product });
}

<div class="card" style="width:20rem">
    <img class="card-img-top" src="~/Media/blxgjmx0/download.png" alt="Card image">
    <div class="card-body">
        <h4 class="card-title">
            <a href="@String.Format("{0}?id={1}", productDetailsRoot.Url, Model.product.id)">@Model.product.name</a>
        </h4>
        <p>@(descbrief)...</p>
    </div>
    <div class="card-footer">
        <p>£@Model.product.price</p>
        <a href="#" class="btn btn-secondary">Add To Wishlist</a>
        <a href="#" class="btn btn-primary">Add To Cart</a>
    </div>
</div>